{
  "openapi": "3.0.3",
  "info": {
    "title": "Auth Service",
    "description": "API endpoints for managing Auth api",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:9090",
      "description": "Inferred Url"
    }
  ],
  "tags": [
    {
      "name": "AUTH-API",
      "description": "Operations related to user authentication and authorization"
    },
    {
      "name": "MENU",
      "description": "Operations related to get menus"
    },
    {
      "name": "USER-API",
      "description": "Operations related to user information"
    }
  ],
  "paths": {
    "/auth/admin": {
      "get": {
        "tags": [
          "AUTH-API"
        ],
        "summary": "Get admin content",
        "description": "Retrieves content specific to administrators",
        "operationId": "getAdminContentUsingGET",
        "responses": {
          "200": {
            "description": "Admin content retrieved successfully",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/all": {
      "get": {
        "tags": [
          "AUTH-API"
        ],
        "summary": "Get public content",
        "description": "Retrieves public content",
        "operationId": "getContentUsingGET",
        "responses": {
          "200": {
            "description": "Public content retrieved successfully",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/mod": {
      "get": {
        "tags": [
          "AUTH-API"
        ],
        "summary": "getModeratorContent",
        "operationId": "getModeratorContentUsingGET",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/signin": {
      "post": {
        "tags": [
          "AUTH-API"
        ],
        "summary": "Authenticate user",
        "description": "Authenticates a user with email and password",
        "operationId": "authenticateUserUsingPOST",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User authenticated successfully",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/JwtAuthenticationResponse"
                }
              }
            }
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Invalid login credentials"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/signup": {
      "post": {
        "tags": [
          "AUTH-API"
        ],
        "summary": "Register user",
        "description": "Registers a new user",
        "operationId": "registerUserUsingPOST",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignUpRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered successfully",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Email address already in use!"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/user": {
      "get": {
        "tags": [
          "AUTH-API"
        ],
        "summary": "Get user content",
        "description": "Retrieves content specific to authenticated users",
        "operationId": "getUserContentUsingGET",
        "responses": {
          "200": {
            "description": "User content retrieved successfully",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/user/me": {
      "get": {
        "tags": [
          "AUTH-API"
        ],
        "summary": "Get current user",
        "description": "Retrieves information about the current authenticated user",
        "operationId": "getCurrentUserUsingGET",
        "responses": {
          "200": {
            "description": "User details retrieved successfully",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/users/summaries": {
      "get": {
        "tags": [
          "AUTH-API"
        ],
        "summary": "Get all user summaries",
        "description": "Retrieves summaries of all registered users",
        "operationId": "findAllUserSummariesUsingGET",
        "responses": {
          "200": {
            "description": "User summaries retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/verify": {
      "post": {
        "tags": [
          "AUTH-API"
        ],
        "summary": "Verify code",
        "description": "Verifies the code for two-factor authentication",
        "operationId": "verifyCodeUsingPOST",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Code verification successful",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Invalid code"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/menu": {
      "get": {
        "tags": [
          "MENU"
        ],
        "summary": "Get Document",
        "operationId": "getMenuDataUsingGET",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "uniqueItems": true,
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MenuData"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/users": {
      "get": {
        "tags": [
          "USER-API"
        ],
        "summary": "Get all users",
        "operationId": "getAllUsersUsingGET",
        "parameters": [
          {
            "name": "ids",
            "in": "query",
            "description": "ids",
            "required": true,
            "style": "pipeDelimited",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved list",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserResponse"
                  }
                }
              }
            }
          },
          "401": {
            "description": "You are not authorized to view the resource"
          },
          "403": {
            "description": "Accessing the resource you requested is forbidden"
          },
          "404": {
            "description": "The resource you requested could not be found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    },
    "/auth/users/{id}": {
      "get": {
        "tags": [
          "USER-API"
        ],
        "summary": "Get user by id",
        "operationId": "getUserByIdUsingGET",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved user",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "You are not authorized to view the resource"
          },
          "403": {
            "description": "Accessing the resource you requested is forbidden"
          },
          "404": {
            "description": "The resource you requested could not be found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      },
      "put": {
        "tags": [
          "USER-API"
        ],
        "summary": "Update an existing user",
        "operationId": "updateUserUsingPUT",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChangeInfoRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated successfully",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/UserInfo"
                }
              }
            }
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "You are not authorized to update a user"
          },
          "403": {
            "description": "Accessing the resource you requested is forbidden"
          },
          "404": {
            "description": "The resource you requested could not be found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      },
      "delete": {
        "tags": [
          "USER-API"
        ],
        "summary": "Delete a user",
        "operationId": "deleteUserUsingDELETE",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "User deleted successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "You are not authorized to delete a user"
          },
          "403": {
            "description": "Accessing the resource you requested is forbidden"
          },
          "404": {
            "description": "The resource you requested could not be found"
          }
        },
        "security": [
          {
            "Authorization": [
              "global"
            ]
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "ChangeInfoRequest": {
        "title": "ChangeInfoRequest",
        "required": [
          "displayName",
          "password"
        ],
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "byte"
          }
        }
      },
      "CharSequence": {
        "title": "CharSequence",
        "type": "object"
      },
      "JwtAuthenticationResponse": {
        "title": "JwtAuthenticationResponse",
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "authenticated": {
            "type": "boolean"
          },
          "user": {
            "$ref": "#/components/schemas/UserInfo"
          }
        }
      },
      "LoginRequest": {
        "title": "LoginRequest",
        "required": [
          "email"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "MenuData": {
        "title": "MenuData",
        "type": "object",
        "properties": {
          "children": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MenuData"
            }
          },
          "icon": {
            "type": "string"
          },
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "label": {
            "type": "string"
          }
        }
      },
      "SignUpRequest": {
        "title": "SignUpRequest",
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "matchingPassword": {
            "$ref": "#/components/schemas/CharSequence"
          },
          "password": {
            "$ref": "#/components/schemas/CharSequence"
          },
          "providerUserId": {
            "type": "string"
          },
          "socialProvider": {
            "type": "string",
            "enum": [
              "FACEBOOK",
              "GITHUB",
              "GOOGLE",
              "LINKEDIN",
              "LOCAL",
              "TWITTER"
            ]
          },
          "userID": {
            "type": "string"
          },
          "using2FA": {
            "type": "boolean"
          }
        }
      },
      "User": {
        "title": "User",
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "id": {
            "type": "string"
          },
          "provider": {
            "type": "string"
          },
          "providerUserId": {
            "type": "string"
          },
          "secret": {
            "type": "string"
          },
          "using2FA": {
            "type": "boolean"
          }
        }
      },
      "UserInfo": {
        "title": "UserInfo",
        "type": "object",
        "properties": {
          "avatar": {
            "type": "string"
          },
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "roles": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "UserResponse": {
        "title": "UserResponse",
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "id": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "Authorization": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  }
}